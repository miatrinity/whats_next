<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => { class: 'box'} ) do |f| %>
  <div id="flashes">
    <p class="is-success"><%= notice %></p>
    <p class="is-danger"><%= alert %></p>
  </div>

  <div class='field'>
    <%= f.label :Email, class: 'label'%>
    <div class='control has-icons-left'>
      <span class='icon is-small is-left'>
        <i class='fa fa-envelope'></i>
      </span>
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'input', placeholder: 'e.g. han.solo@gmail.com' %>
    </div>
  </div>
  
  <div class='field'>
    <%= f.label :Password, class: 'label' %>
    <div class='control has-icons-left'>
      <span class='icon is-small is-left'>
        <i class='fa fa-lock'></i>
      </span>
      <%= f.password_field :password, autocomplete: 'current-password', class: 'input', placeholder:'********', required:'true' %>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class='field'>
      <%= f.check_box :remember_me, class: 'checkbox' %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class='field'>
    <%= f.submit "Log in", class: 'button is-success' %>
  </div>
  <br>
  <div class='is-vcentered'>
    <%= render "devise/shared/links" %>
  </div>
<% end %>
